
@model List<StApp.Entityes.Directory>
@{
    ViewData["Title"] = "Home Page";
}
<div class="row">
    <div class="col-md-12">
        <ul>
            @foreach (var item in Model)
            {
            <li>
                <h2><a asp-action="Index" asp-controller="Page" asp-route-pageId="@item.Id" asp-route-pageType="@StApp.Enums.PageEnums.PageType.Directory" >@item.Title</a></h2>
                <ul>
                    @if (item.Materials != null)
                    {
                        foreach (var subItem in item.Materials)
                        {
                            <li><a asp-action="Index" asp-controller="Page" asp-route-pageId="@subItem.Id" asp-route-pageType="@StApp.Enums.PageEnums.PageType.Material">@subItem.Title</a></li>
                        }
                    }

                </ul>
            </li>
                
            }
        </ul>
    </div>
</div>